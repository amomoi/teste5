<h1>Clientes</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Nome empresa</th>
      <th>Site</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.id %></td>
        <td><%= cliente.nome_empresa %></td>
        <td><%= cliente.site %></td>
        <td><%= link_to 'Listagem Sensores', cliente_sensors_path(cliente) %></td>
        <td><%= link_to 'Show', cliente %></td>
        <td><%= link_to 'Edit', edit_cliente_path(cliente) %></td>
        <td><%= link_to 'Destroy', cliente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

