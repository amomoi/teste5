<div class="login">

  <%= form_for("login", html: { class: "form-horizontal col-md-6 col-md-offset-3", role:"form" }) do |f| %>
    <% if flash[:erro].present? %>
      <div class="alert alert-danger alert-dismissable" role="alert">
        <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Fechar</span></button>
        <ul>
          <li><%= flash[:erro] %></li>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :cpf, 'CPF', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= f.text_field :cpf, class: "form-control" %>
      </div><br>
    </div>

    <div class="form-group">
      <%= f.label :senha, 'Senha', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= f.password_field :senha, class: "form-control" %>
      </div><br>
    </div>

    <div class="form-group">
      <%= f.label :lembrar, 'Deixe me logado', class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <input type="checkbox" value="1" checked="checked" name="login[lembrar]" id="login_lembrar" >
      </div><br>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10"?
      <%= f.submit 'Logar', class: "btn btn-primary" %>
      </div>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>

<% end %>

