<%= form_with(model: [@cliente_id, @sensor]) do |form| %>
  <% if sensor.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sensor.errors.count, "error") %> prohibited this sensor from being saved:</h2>

      <ul>
        <% sensor.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome_sensor %>
    <%= form.text_field :nome_sensor %>
  </div>

  <div class="field">
    <%= form.label :cliente_id %>
    <!-- <%= form.text_field :cliente_id %> -->
    <%= form.select :cliente_id, Cliente.all.collect {|c| [c.nome_empresa, c.id]}, include_blank: true %>

  </div>

  <div class="field">
    <%= form.label :tipo_sensor_id %>
    <!-- <%= form.text_field :tipo_sensor_id %> -->
    <%= form.select :tipo_sensor_id, TipoSensor.all.collect {|t| [t.tipo_sensor, t.id]}, include_blank: true %>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
