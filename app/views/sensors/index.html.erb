<p id="notice"><%= notice %></p>

<h1>Sensors</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Nome sensor</th>
      <th>Cliente</th>
      <th>Tipo sensor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sensors.each do |sensor| %>
      <tr>
        <td><%= sensor.id %></td>
        <td><%= sensor.nome_sensor %></td>
        <td><%= sensor.cliente.nome_empresa %></td>
        <td><%= sensor.tipo_sensor.tipo_sensor %></td>
        <td><%= link_to 'Leituras', cliente_sensors_path(sensor) %></td>
        <td><%= link_to 'Show', cliente_sensor_path(@cliente, sensor) %></td>
        <td><%= link_to 'Edit', edit_cliente_sensor_path(@cliente, sensor) %></td>
        <td><%= link_to 'Destroy', cliente_sensor_path(@cliente, sensor), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sensor', new_cliente_sensor_path(@cliente) %>
