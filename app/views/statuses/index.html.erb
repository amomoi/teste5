<p id="notice"><%= notice %></p>

<h1>Statuses</h1>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Flag_notificação</th>
      <th>Flag_rearme</th>
      <th>Flag_mantec</th>
      <th>Sensor ID</th>
      <th>Nome do Sensor</th>
      <th>Cliente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @statuses.each do |status| %>
      <tr>
        <td><%= status.id %></td>
        <td><%= status.flag %></td>
        <td><%= status.flag_rearme %></td>
        <td><%= status.flag_mantec %></td>
        <td><%= status.sensor_id %></td>
        <td><%= status.sensor.nome_sensor %></td>
        <td><%= status.sensor.cliente.nome_empresa %></td>
        <td><%= link_to 'Show', status %></td>
        <td><%= link_to 'Edit', edit_status_path(status) %></td>
        <td><%= link_to 'Destroy', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

